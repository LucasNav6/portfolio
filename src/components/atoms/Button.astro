---
interface Props {
  variant?: "primary" | "secondary";
  size?: "default" | "sm" | "lg" | "icon";
  href?: string;
  "aria-label"?: string;
}

const { variant = "primary", size = "default", href, "aria-label": ariaLabel } = Astro.props;

const base =
  "inline-flex items-center justify-center font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 disabled:opacity-50 disabled:pointer-events-none";

const variants = {
  primary:
    "cursor-pointer outline bg-primary/20 gap-2 outline-primary text-foreground hover:bg-primary/30",
  secondary:
    "cursor-pointer flex items-center gap-2 bg-background text-foreground border border-muted-foreground/80 hover:border-muted-foreground hover:bg-accent hover:text-accent-foreground font-light",
};

const sizes = {
  sm: "h-8 px-3 text-sm",
  default: "h-10 px-5 text-sm",
  lg: "h-12 px-6 text-base",
  icon: "h-10 w-10 p-1",
};

const classes = `${base} ${variants[variant]} ${sizes[size]}`;
---

{href ? (
  <a href={href} transition:animate="fade" class={classes} aria-label={ariaLabel}>
    <slot />
  </a>
) : (
  <button class={classes} aria-label={ariaLabel}>
    <slot />
  </button>
)}
