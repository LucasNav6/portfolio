---
interface Props {
  class?: string;
}

const { class: className = "" } = Astro.props;
---

<ol
  role="list"
  class:list={[
    "relative flex flex-col gap-0",
    className,
  ]}
  style="
    --color-muted: #a3a3a3;
    --color-primary: #0ea5e9;
  "
>
  <!-- LÃ­nea muted que ocupa toda la altura del ul -->
  <div
    class="absolute top-4 bottom-4 left-[1.125rem] w-0.5 bg-[var(--color-muted)] -z-10"
  />
  <slot />
</ol>